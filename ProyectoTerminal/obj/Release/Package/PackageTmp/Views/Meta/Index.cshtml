@using ProyectoTerminal.Extensions
@model IEnumerable<ProyectoTerminal.Models.Meta>

@{
    ViewBag.Title = "Listado de metas";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre).ToString().TruncateString(0, 100)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCompletacionPlaneada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCompletacionActual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completada)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompletacionPlaneada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompletacionActual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completada)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new {id = item.Id}, new {@class = "glyphicon glyphicon-pencil"}) |
                @Html.ActionLink(" ", "Details", new {id = item.Id}, new {@class = "glyphicon glyphicon-zoom-in"}) |
                @Html.ActionLink(" ", "Delete", new {id = item.Id}, new {@class = "glyphicon glyphicon-trash"})
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Regresar a la lista de proyectos", "Index", "Proyecto", null, new { @class = "btn btn-info" })