@using ProyectoTerminal.Extensions
@model IEnumerable<ProyectoTerminal.Models.Requerimiento>

@{
    ViewBag.Title = "Lista de requerimientos";
}

<h2>Requerimientos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre).ToString().TruncateString(0, 100)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion).ToString().TruncateString(0, 100)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Regresar a la lista de proyectos", "Index", "Proyecto", null, new { @class = "btn btn-info" })