@using ProyectoTerminal.Extensions
@model IEnumerable<ProyectoTerminal.Models.Documento>

@{
    ViewBag.Title = "Lista de documentos";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo).ToString()
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Texto).ToString()
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo).ToString().TruncateString(0, 100)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto).ToString().TruncateString(0, 100)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) |
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Regresar a la lista de proyectos", "Index", "Proyecto", null, new { @class = "btn btn-info" })