@model IEnumerable<ProyectoTerminal.Models.Nota>

@{
    ViewBag.Title = "Listado de Notas";
}

<h2>Notas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Detalles", "Details", new {id = item.Id}) |
                @Html.ActionLink("Borrar", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Regresar a la lista de proyectos", "Index", "Proyecto")
