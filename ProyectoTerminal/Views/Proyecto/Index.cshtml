@model IEnumerable<ProyectoTerminal.Models.Proyecto>

@{
    ViewBag.Title = "Listado de Proyectos";
}

<h2>Listado de proyectos</h2>

<p>
    @Html.ActionLink("Crear nuevo proyecto", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requerimientos)
        </th>
        <th class="center-block">
            @Html.DisplayNameFor(model => model.Documentos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Metas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tareas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Repositorios)
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            <!-- notas -->
            @Html.ActionLink(" ", "Index", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" }) |
            @Html.ActionLink(" ", "Create", "Nota", new {pid = item.Id}, new { @class = "glyphicon glyphicon-plus" })
        </td>
        <td> <!-- requerimientos -->
            @Html.ActionLink(" ", "Index", "Requerimiento", new { pid = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" })
            @Html.ActionLink(" ", "Create", "Requerimiento", new { pid = item.Id }, new { @class = "glyphicon glyphicon-plus" })
        </td>
        <td class="center-block">
            <!-- documentos -->
            @Html.ActionLink(" ", "Index", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" })
            @Html.ActionLink(" ", "Create", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-plus" })
        </td>
        <td>
            <!-- metas -->
            @Html.ActionLink(" ", "Index", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" })
            @Html.ActionLink(" ", "Create", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-plus" })
        </td>
        <td>
            <!-- tareas -->
            @Html.ActionLink(" ", "Index", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" })
            @Html.ActionLink(" ", "Create", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-plus" })
        </td>
        <td>
            <!-- repositorios -->
            @Html.ActionLink(" ", "Index", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" }) |
            @Html.ActionLink(" ", "Create", "Nota", new { pid = item.Id }, new { @class = "glyphicon glyphicon-plus" })
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) |
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })
        </td>
    </tr>
}

</table>
